                    <button type="submit" class="button">Login</button>
                    <button type="button" class="google-button" onclick="continueWithGoogle()">Continue with Google</button>
                </div>

                <div class="forgot-password">
                    <a href="#">Forgot password?</a>
                </div>
            </form>
        </div>
    </div>

